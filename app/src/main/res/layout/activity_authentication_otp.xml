<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back_arrow"
        android:layout_marginStart="25dp"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_title_otp"
        android:text="@string/title_otp"
        android:textColor="@color/color_text_blue_dark"
        android:textSize="22sp"
        style="@style/text_font_inter_bold"
        android:layout_marginTop="43dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_content_otp"
        android:text="@string/content_otp"
        android:textColor="@color/color_text_hint"
        android:textSize="15sp"
        style="@style/text_font_inter_semi_bold"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_otp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/ll_ed_otp_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_otp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:layout_marginHorizontal="47dp"
        android:layout_marginTop="30dp"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal">
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/ed_otp_1"
            android:textColor="@color/color_text_blue_dark"
            android:textSize="26dp"
            android:text="8"
            android:layout_margin="1.5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/bg_edit_text_outline"
            style="@style/text_font_inter_semi_bold"/>
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/ed_otp_2"
            android:textColor="@color/color_text_blue_dark"
            android:textSize="26dp"
            android:text="8"
            android:layout_margin="1.5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/bg_edit_text_outline"
            style="@style/text_font_inter_semi_bold"/>
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/ed_otp_3"
            android:textColor="@color/color_text_blue_dark"
            android:textSize="26dp"
            android:text="8"
            android:layout_margin="1.5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/bg_edit_text_outline"
            style="@style/text_font_inter_semi_bold"/>
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/ed_otp_4"
            android:textColor="@color/color_text_blue_dark"
            android:textSize="26dp"
            android:text="8"
            android:layout_margin="1.5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/bg_edit_text_outline"
            style="@style/text_font_inter_semi_bold"/>
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/ed_otp_5"
            android:textColor="@color/color_text_blue_dark"
            android:textSize="26dp"
            android:text="8"
            android:layout_margin="1.5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/bg_edit_text_outline"
            style="@style/text_font_inter_semi_bold"/>
        <EditText
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/ed_otp_6"
            android:textColor="@color/color_text_blue_dark"
            android:textSize="26dp"
            android:text="8"
            android:layout_margin="1.5dp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/bg_edit_text_outline"
            style="@style/text_font_inter_semi_bold"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time_count"
        android:textColor="#9FA5C0"
        style="@style/text_font_inter_semi_bold"
        android:textSize="16sp"
        android:text="@string/remaining"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_ed_otp_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_send_to"
        android:textColor="@color/colorPriamry"
        style="@style/text_font_inter_bold"
        android:textSize="14sp"
        android:text="@string/send_to"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_time_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_veri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/verification"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_button_color_primary_8"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_send_to"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ProgressBar
        android:id="@+id/progress_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>