<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="4dp">

    <ImageView
        android:id="@+id/img_avate_store"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_radius_8"
        android:src="@drawable/img_demo_store"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="8dp"
        android:background="@drawable/bg_solid_opcity_white"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        android:paddingVertical="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_store"
                style="@style/text_font_inter_semi_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bố Giặt"
                android:textColor="@color/color_text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_location"
                style="@style/text_font_inter_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="3dp"
                android:text="Long biên hà nội"
                android:textColor="@color/color_text_black"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_phone_store"
                style="@style/text_font_inter_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableEnd="@drawable/ic_car"
                android:drawablePadding="5dp"
                android:text="02893921"
                android:textColor="@color/color_text_black"
                android:textSize="8sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:adjustViewBounds="true"
                android:src="@drawable/img_rate" />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textColor="@color/color_text_black"
                android:textSize="8sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>